{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "Constants": ["../../docs/covfee_constants.json"],
      "@covfee-spec/*": ["../shared/spec/*"],
      "@covfee-shared/*": ["../shared/*"],
      "@docs/*": ["../../docs/*"]
    }
  },
  "include": ["./**/*", "../shared/spec/**/*"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
